{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6",
      "es5"
    ],
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "shared/microservice-core",
    "node_modules/**/*",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*", "./shared/models/**/*"
  ]
}
